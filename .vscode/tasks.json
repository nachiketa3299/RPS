{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "RZN_PS_mkdir",
      "command": "New-Item",
      "args": [
        "-ItemType",
        "Directory",
        "-Force",
        "-Path",
        "${workspaceRoot}\\bin\\${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "type": "shell",
      "label": "RZN_PS_build",
      "dependsOn": "RZN_PS_mkdir",
      "dependsOrder": "sequence",
      "command": "powershell.exe",
      "args": [
        ".vscode\\msvc_build.ps1",
        "${workspaceRoot}",
        "${fileBasenameNoExtension}",
        "${file}"
      ],
      "problemMatcher": [
        "$msCompile"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "type": "shell",
      "label": "RZN_PS_run",
      "dependsOn": "RZN_PS_build",
      "dependsOrder": "sequence",
      "command": "${workspaceRoot}\\bin\\${fileBasenameNoExtension}\\${fileBasenameNoExtension}.exe",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "E:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}